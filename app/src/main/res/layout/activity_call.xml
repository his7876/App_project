<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallActivity">


    <include
        android:id="@+id/include"
        layout="@layout/app_bar_main"

        />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="45dp"
        android:layout_height="57dp"
        android:paddingLeft="5dp"
        app:layout_constraintStart_toStartOf="@+id/include"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_plcc" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="118dp"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="긴급 신고"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/bolder_call"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="278dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/emergency" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="484dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="범죄 신고"
            android:textColor="#070707"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_border"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/mssss" />

            <ImageView
                android:id="@+id/pC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/cccccaalll" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:background="@drawable/bolder_call"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="278dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/fire" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="484dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="화재 구조 구급신고"
            android:textColor="#070707"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bolder_call"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/mssss" />

            <ImageView
                android:id="@+id/fC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/cccccaalll" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bolder_call"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_fix" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="생활 안전 신고"
            android:textColor="#070707"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/internet"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/internet" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="411dp"
        android:layout_height="159dp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="각 버튼 클릭시 바로 긴급 신고가 가능합니다 \n 문자 전송시 현 사용자의 위치가 함께 전송됩니다."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>